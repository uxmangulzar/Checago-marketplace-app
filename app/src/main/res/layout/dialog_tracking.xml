<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_placeOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="@dimen/_8sdp"
                android:text="Order Tracking"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_placeOrder"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="STATUS CODE :NY"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_placeOrder"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="DESCRIPTION : N/A"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_placeOrder"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Estimated Delivery :N/A"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
    <TextView
                android:id="@+id/tv_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_placeOrder"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Actual Delivery : N/A"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_okDriverArrived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Ok"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:layout_marginBottom="@dimen/_8sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>