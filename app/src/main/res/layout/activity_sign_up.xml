<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Acitivity.Signin.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:onClick="onBackPressed"
                android:src="@drawable/ic_baseline_arrow_back_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:paddingStart="-40dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toEndOf="@id/img_back"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/d"
            android:background="@color/black"/>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_below="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/coffee_mugs"
                app:civ_border_color="#FF000000"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:civ_border_width="2dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:text="Upload Profile"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            />

    <LinearLayout
        android:layout_below="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/signup_FullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/_14sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="First Name"
            android:layout_marginBottom="@dimen/_3sdp"
            android:inputType="text"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:layout_marginTop="@dimen/_40sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Email Address"
            android:inputType="text"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:layout_marginBottom="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_lock"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/signup_cPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="30dp"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableStart="@drawable/ic_lock"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/signup_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter Phone Number"
            android:inputType="number"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:paddingRight="15dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />
        <EditText
            android:id="@+id/signup_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter Address"
            android:inputType="number"
            android:paddingStart="30dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/ic_placeholder"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />
        <EditText
            android:id="@+id/ed_shoppostalcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_14sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Zip code"
            android:inputType="number"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableLeft="@drawable/ic_placeholder"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_13ssp" />
        <EditText
            android:id="@+id/ed_shopcity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_14sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="city"
            android:inputType="text"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableLeft="@drawable/ic_placeholder"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_13ssp" />
        <EditText
            android:id="@+id/ed_shopstate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_14sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Province"
            android:inputType="text"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableLeft="@drawable/ic_placeholder"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_13ssp" />
        <EditText
            android:visibility="gone"
            android:id="@+id/signup_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Credit Card Number"
            android:inputType="number"
            android:layout_marginBottom="@dimen/_3sdp"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/ic_credit_card"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />
        <EditText
            android:visibility="gone"
            android:id="@+id/signup_expiryDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Expiry Date"
            android:inputType="number"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:paddingRight="15dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />
        <EditText
            android:visibility="gone"
            android:id="@+id/signup_cvv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/edit_text_without_strock"
            android:drawablePadding="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Cvv"
            android:inputType="number"
            android:paddingStart="30dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:paddingRight="15dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_baseline_calendar_view_day_24"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/_12sdp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:padding="@dimen/_8sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ButtonRounded"
            android:backgroundTint="@color/yellow"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_14ssp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:weightSum="1"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/_32sdp"
            >

            <TextView
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textSize="@dimen/_12ssp"
                android:gravity="end"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView

                android:id="@+id/tv_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text=" SignIn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_12ssp"
                tools:layout_editor_absoluteX="318dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
    </ScrollView>
</RelativeLayout>