<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f2f3"
    >
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Acitivity.Reviews.RatingActivity">
    <RelativeLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:gravity="center"
        android:background="#f5f2f3">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:layout_marginTop="@dimen/_11sdp"
            android:onClick="onBackPress"
            android:layout_marginStart="@dimen/_8sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="Give Review"
            android:fontFamily="@font/poppins_bold"
            android:gravity="start|center"
            android:layout_toEndOf="@+id/img_back"
            android:paddingTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_13ssp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/d"
        android:background="@color/black"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="Please Give Rating to Our Services"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        />
    <LinearLayout
        android:id="@+id/ln_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:gravity="center">
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="true"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:padding="@dimen/_3sdp"
        android:backgroundTint="@color/yellow"
        android:layout_marginTop="@dimen/_5sdp"
        style="@style/Widget.AppCompat.RatingBar"
        />
    </LinearLayout>
    <EditText
        android:id="@+id/tv_ratingComment"
        android:background="@drawable/edittext_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/ln_rating"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:hint="Please Add Some Comments:"
        android:gravity="start"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:textColorHint="@color/black"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_giveRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Give Rating"
        android:textColor="@color/white"
        android:padding="@dimen/_8sdp"
        android:layout_below="@+id/cardd"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ButtonRounded"
        android:backgroundTint="@color/yellow"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/_14ssp"
        />
</RelativeLayout>
</ScrollView>