<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Acitivity.Shops.BrowseShopItemActivity">
    <RelativeLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:gravity="center"
        android:background="@color/yellow"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            app:tint="@color/white"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"/>
        <TextView
            android:id="@+id/shopname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Browse Item"
            android:gravity="start|center"
            android:layout_toEndOf="@+id/img_back"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_13ssp"/>

        <FrameLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:clipToPadding="false"
            android:focusable="true">
            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                app:tint="@color/white"
                android:src="@drawable/ic_shopping_cart"/>
            <TextView
                android:background="@drawable/badge_background"
                android:id="@+id/cart_items"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="right|end|top"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="0"
                />
        </FrameLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:layout_below="@+id/d"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/d"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_margin="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/rl_browseshopitem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/lnd"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gizah Shop"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginStart="@dimen/_10sdp"

                        />
                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/ln_rightArrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="end">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/right_arrow"

                            android:layout_marginEnd="@dimen/_5sdp"

                            />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnd"
                    android:id="@+id/rl"
                    >
                    <ImageView
                        android:id="@+id/img_shopImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/coffeeshop1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24-26 miles"
                        android:background="@drawable/distance_back"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/img_shopImage"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_11ssp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:visibility="gone"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"/>

                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_shopName"
                    android:layout_below="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kaffeine"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/tv_shop_description"
                    android:layout_below="@+id/tv_shopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We Provide Best Coffee Services Here According to your Taste!"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    />
                <LinearLayout
                    android:id="@+id/ln_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_shop_description"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:weightSum="1"
                    >
                    <ImageView
                        android:id="@+id/tv_shop_address"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_placeholder"
                        android:text="125 Main St Chichago, IL 60610"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_shop_distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="24 A Walt Street block 4A Chichago"
                        android:gravity="center|start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/textcolor"
                        android:fontFamily="@font/poppins_bold"

                        />
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/rl_browseshopitem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating:"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_star_24"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_shopDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Closed"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="@dimen/_25sdp"
                    />


                <TextView

                    android:id="@+id/tv_shopTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11ssp"
                    android:text="N/A"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginEnd="@dimen/_16sdp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dd"
        android:layout_below="@+id/card"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_without_strock"
        android:weightSum="1">
        <Spinner
            android:id="@+id/spinner_subcats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:pointerIcon="text"
            />
    </LinearLayout>
  <androidx.recyclerview.widget.RecyclerView
      android:layout_below="@+id/dd"
      android:id="@+id/rl_browseshopitem"
      android:layout_width="match_parent"
      android:padding="@dimen/_10sdp"
      android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>