<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp"

        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/coffee_mugs"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0.2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_orderStatusNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Order Has Been Accepted!"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_notificationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2020"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_notificationTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12:34 AM"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>